{
  "$schema": "https://github.com/jopemachine/arvis-core/blob/master/workflow-schema.json",
  "category": "Productivity",
  "creator": "Vincent Klaiber",
  "description": "Arvis workflow to search for PHP packages with Packagist",
  "name": "Packagist",
  "readme": "",
  "defaultIcon": "icon.png",
  "enabled": true,
  "commands": [
    {
      "type": "scriptFilter",
      "command": "packagist",
      "title": "Packagist",
      "subtitle": "Search for PHP packages",
      "scriptFilter": "node index.js \"$1\"",
      "runningSubtext": "Searchingâ€¦",
      "withspace": true,
      "argType": "required",
      "action": [
        {
          "modifiers": "normal",
          "type": "open",
          "target": "{query}"
        },
        {
          "modifiers": "ctrl",
          "type": "clipboard",
          "text": "{query}"
        }
      ]
    }
  ]
}
